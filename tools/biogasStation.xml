<?xml version="1.0" encoding="utf-8" standalone="no" ?>
<placeable type="buyingStation" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../shared/xml/schema/placeable.xsd">
    <storeData>
        <name>$l10n_shopItem_biogasStation_snapping</name>
        <image>$data/placeables/lizard/biogasStation/store_biogasStation.png</image>
        <functions>
            <function>$l10n_function_biogasStation</function>
        </functions>
        <price>5000</price>
        <dailyUpkeep>5</dailyUpkeep>
        <canBeSold>true</canBeSold>
        <showInStore>true</showInStore>
        <lifetime>1000</lifetime>
        <rotation>0</rotation>
        <brand>NONE</brand>
        <species>placeable</species>
        <category>placeableMisc</category>
        <brush>
            <type>placeable</type>
            <category>buildings</category>
            <tab>tools</tab>
        </brush>
        <vertexBufferMemoryUsage>0</vertexBufferMemoryUsage>
        <indexBufferMemoryUsage>0</indexBufferMemoryUsage>
        <textureMemoryUsage>0</textureMemoryUsage>
        <instanceVertexBufferMemoryUsage>0</instanceVertexBufferMemoryUsage>
        <instanceIndexBufferMemoryUsage>0</instanceIndexBufferMemoryUsage>

        <storeIconRendering>
            <settings advancedBoundingBox="true" />
        </storeIconRendering>
    </storeData>

    <base>
        <filename>$data/placeables/lizard/biogasStation/biogasStation.i3d</filename>
    </base>

    <placement useRandomYRotation="false" useManualYRotation="true" placementRotationSnapAngle="45" placementPositionSnapSize="0.5" >
        <testAreas>
            <testArea startNode="testArea1Start" endNode="testArea1End" />
        </testAreas>

        <sounds>
            <place template="smallImp" pitchScale="1.6"/>
        </sounds>
    </placement>

    <clearAreas>
        <clearArea startNode="clearArea1Start" widthNode="clearArea1Width" heightNode="clearArea1Height"/>
    </clearAreas>

    <leveling requireLeveling="false" maxSlope="75" maxEdgeAngle="30">
        <levelAreas>
            <levelArea startNode="levelArea1Start" widthNode="levelArea1Width" heightNode="levelArea1Height" groundType="asphalt"/>
        </levelAreas>
    </leveling>

    <indoorAreas />

    <tipOcclusionUpdateAreas>
        <tipOcclusionUpdateArea startNode="tipOcclusionUpdateArea1Start" endNode="tipOcclusionUpdateArea1End" />
    </tipOcclusionUpdateAreas>

    <ai>
        <updateAreas>
            <updateArea startNode="tipOcclusionUpdateArea1Start" endNode="tipOcclusionUpdateArea1End" />
        </updateAreas>
    </ai>

    <buyingStation node="fillTrigger" supportsExtension="false">
        <loadTrigger triggerNode="fillTrigger" fillTypes="METHANE" fillLitersPerSecond="2" autoStart="true" infiniteCapacity="true" />
        <fillType name="METHANE" priceScale="1" />
    </buyingStation>

    <hotspots>
        <hotspot type="FUEL" linkNode="biogasStation" teleportNode="teleportNode" />
    </hotspots>

    <i3dMappings>
        <i3dMapping id="biogasStation" node="0>" />
        <i3dMapping id="clearArea1Start" node="0>0|0" />
        <i3dMapping id="clearArea1Width" node="0>0|0|0" />
        <i3dMapping id="clearArea1Height" node="0>0|0|1" />
        <i3dMapping id="levelArea1Start" node="0>1|0" />
        <i3dMapping id="levelArea1Width" node="0>1|0|0" />
        <i3dMapping id="levelArea1Height" node="0>1|0|1" />
        <i3dMapping id="testArea1Start" node="0>2|0" />
        <i3dMapping id="testArea1End" node="0>2|0|0" />
        <i3dMapping id="tipOcclusionUpdateArea1Start" node="0>3|0" />
        <i3dMapping id="tipOcclusionUpdateArea1End" node="0>3|0|0" />
        <i3dMapping id="fillTrigger" node="0>6" />
        <i3dMapping id="teleportNode" node="0>7" />
    </i3dMappings>
</placeable>
